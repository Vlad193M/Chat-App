rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
      // allow update: if request.auth != null && request.resource.data.keys().hasOnly(["chats"]);
    }
    match /users/{userId}/userChats {
      allow list: if request.auth.uid == userId;
      // allow write: if request.auth.uid == userId || resource.data.receiverId == request.auth.uid;
    }
    match /users/{userId}/userChats/{userChatId} {
      allow read: if request.auth.uid == userId;
      // allow read: if request.auth.uid == userId || request.auth.uid == resource.data.receiverId;
      allow write: if request.auth.uid == userId || request.resource.data.receiverId == request.auth.uid;
      allow create: if !exists(/databases/$(database)/documents/users/$(userId)/userChats/$(request.resource.id));
    }
    //
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
    }
    match /chats/{chatId}/messages {
    	 allow list: if request.auth != null;
    }
    
    match /chats/{chatId}/messages/{message} {
    	 allow read, write, list: if request.auth != null;
    }
    
    // match /chats/{chatId} {
    // 	allow create: if request.auth != null;
    // 	allow write, read: if request.auth != null;
    //   // allow read: if request.auth != null && request.auth.uid in resource.data.participants;
    // }
  }
}